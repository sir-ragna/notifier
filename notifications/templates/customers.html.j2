{% extends "base.html.j2" %}

{% block content %}

<a href="{% url 'index' %}">Go back</a>
<hr>
<h1>Manage Customer GUIDs</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>GUID</th>
            <th>Customer Name</th>
        </tr>
    </thead>
    <tbody>
    {% for customer in customers %}
        <tr>
            <td>{{ customer.guid }}</td>
            <td>{{ customer.name }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<h2>Add Customer GUIDs</h2>

<form method="POST">
    {% csrf_token %}
    {{ customer_form.as_p }}
    <button type="submit" class="btn btn-primary">Create a Customer GUID</button>
</form>

{% endblock content %}